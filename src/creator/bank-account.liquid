</div>

<div
        id="withdraw-modal"
        tabindex="-1"
        aria-hidden="true"
        class="fixed top-0 left-0 right-0 z-50 hidden p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative w-full max-w-lg max-h-full">
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <button
              type="button"
              class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white"
              data-modal-hide="withdraw-modal">
        <i class="fa-solid fa-xmark"></i>
        <span class="sr-only">Close modal</span>
      </button>
      <div class="p-6">
        <h1 class="text-xl font-bold text-gray-600 dark:text-gray-50">Make Withdrawal</h1>
        <form
                action="#"
                method="POST"
                class="p-4 space-y-6 rounded-lg"
                x-data="index()"
        >
          <div class="grid grid-cols-6 gap-6 mt-8">
            <div class="col-span-6 sm:col-span-6">
              <div class="col-span-6 sm:col-span-3">
                <label for="bank" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                  Bank
                </label>
                <select id="bank"  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                  <option selected>Choose a Bank</option>
                  <option value="156">GTBank</option>
                </select>
              </div>
            </div>
            <div class="col-span-6 sm:col-span-6">
              <label for="amount" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Amount
              </label>
              <input
                      x-model="amount"
                      placeholder="Minimum Amount: 1000"
                      type="number"
                      step="0.01"
                      id="amount"
                      name="amount"
                      inputmode="numeric"
                      class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" />
            </div>

            <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
              <button :disabled="amount < 1000" class="flex justify-center text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 disabled:bg-slate-400 dark:disabled:bg-blue-400 disabled:cursor-not-allowed">
                Withdraw
              </button>
            </div>
          </div>
        </form>
        <div class="px-3 pt-3 pb-6">
          <div class="p-5 mb-4 flex flex-col items-center justify-center w-full h-[19rem] border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
            <p class="text-center text-gray-400 dark:text-gray-300">You have not added a bank account yet.</p>
            <a href="/creator/back-account"
               class="mt-4 text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 shadow-lg shadow-blue-500/50 dark:shadow-lg dark:shadow-blue-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
              Add Bank Account
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  function index() {
    return {
      pageTitle: 'Bank Account',
      loading: false,
      error: '',
      bank: '',
      accountNumber: '',
      accountHolder: '',
      amount: 1000,
      user: {
        id: 1,
        firstname: 'Robert',
        lastname: 'Pinkman',
        email: 'jessepinkman@gmail.com',
        image: 'profile.jpeg',
        kyc: true,
        availability: true,
      },
      banks: [],
      getBanks() {
        fetch('/assets/js/banks.json')
          .then(response => response.json())
          .then(data => {
            this.banks = data.data
          })
      },
      getAccountHolder() {
        if (this.bank.length > 1 && this.accountNumber.length === 10) {
          this.loading = true;
          fetch('https://api.paystack.co/bank/resolve?account_number=' + this.accountNumber + '&bank_code=' + this.bank, {
            method: 'GET',
            headers: {
              'Content-Type': 'application/json',
              'Authorization': 'Bearer sk_test_b599bc3c230d06243f988ceae69af1abbfd7c5bf', // Maybe get from .env file for security
            }
          })
                  .then(response => response.json())
                  .then(data => {
                    this.accountHolder = data.data.account_name;
                    this.loading = false;
                  })
                  .catch((error) => {
                    this.error = 'Invalid Bank Account Number';
                    this.loading = false;
                  })
          ;
        } else return console.log('Nothing to show!');
      }
    }
  }
</script>