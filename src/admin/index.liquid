<script>
  function index() {
    return {
      pageTitle: 'Dashboard',
      filterOption:'Filter Status',
      dates: ['November 2023','December 2022', 'January 2023', 'February 2023', 'March 2023', 'April 2023', 'May 2023'],
      dateOption:'May 2023',
      user: {
        id: 1,
        firstname: 'Robert',
        lastname: 'Pinkman',
        email: 'jessepinkman@gmail.com',
        image: 'profile.jpeg',
        kyc: true,
        availability: true,
      },
      filterDateQuery:'',
      filterDates() {
        if (this.filterDateQuery === "") return this.dates;
        const Q = this.filterDateQuery.toLowerCase();
        return this.dates.filter(s=>s.toLowerCase().includes(Q))
      },
    }
  }
</script>

